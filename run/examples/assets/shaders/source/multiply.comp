#version 460 core

layout(local_size_x = 256) in;

layout(std430, binding = 0) buffer InputBuffer 
{
    float inputData[];
};

layout(std430, binding = 1) buffer OutputBuffer 
{
    float outputData[];
};

void main() 
{
    uint idx = gl_GlobalInvocationID.x;
	outputData[idx] = inputData[idx] * inputData[idx];
}
